<!--
Carousel wheel and main menu background
-->


<feature supported="carousel">
   <view name="system">
        <carousel name="systemcarousel">
          <zIndex>43</zIndex>	      
          <type>vertical_wheel</type>
          <pos>0.28 -1.8</pos>
          <size>1 4.6</size>
		  <logoScale>1</logoScale>		  
          <logoSize>0.2 0.2</logoSize>
          <color>00000000</color>
          <maxLogoCount>11</maxLogoCount>
          <logoRotation>-10</logoRotation>
          <logoRotationOrigin>3 0.5</logoRotationOrigin>
          <logoAlignment>center</logoAlignment>       
         </carousel>	  
      <image name="background" extra="true">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>
         <zIndex>1</zIndex>                 
         <path>./_inc/images/main_bottom.png</path>
      </image> 	
      <image name="background2" extra="true">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>
         <zIndex>3</zIndex>                 
         <path>./_inc/images/main_top.png</path>
      </image> 	  
      <text name="systemInfo">     
         <pos>-0.07 0.91</pos>
         <backgroundColor>00000000</backgroundColor>
         <color>ffffff</color>
         <fontPath>./_inc/fonts/BADABB__.TTF</fontPath>
	     <fontSize>0.04</fontSize>
         <zIndex>11</zIndex>
         <alignment>center</alignment> 	     
      </text>            
   </view>
</feature>


